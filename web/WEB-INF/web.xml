<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 字符过滤 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>cn.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- 登录过滤 -->
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>cn.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 配置加载商品servlet -->
    <servlet>
        <servlet-name>goodsQueryServlet</servlet-name>
        <servlet-class>cn.servlet.GoodsQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>goodsQueryServlet</servlet-name>
        <url-pattern>/goodsQueryServlet</url-pattern>
    </servlet-mapping>

    <!-- 配置删除商品servlet -->
    <servlet>
        <servlet-name>deleteGoodsServlet</servlet-name>
        <servlet-class>cn.servlet.DeleteGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteGoodsServlet</servlet-name>
        <url-pattern>/deleteGoodsServlet</url-pattern>
    </servlet-mapping>

    <!-- 配置加载单个商品servlet -->
    <servlet>
        <servlet-name>loadGoodsDataServlet</servlet-name>
        <servlet-class>cn.servlet.LoadGoodsDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loadGoodsDataServlet</servlet-name>
        <url-pattern>/loadGoodsDataServlet</url-pattern>
    </servlet-mapping>

    <!-- 配置登录servlet -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>cn.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <!-- 配置登录servlet -->
    <servlet>
        <servlet-name>updateGoodsServlet</servlet-name>
        <servlet-class>cn.servlet.UpdateGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateGoodsServlet</servlet-name>
        <url-pattern>/updateGoodsServlet</url-pattern>
    </servlet-mapping>

    <!-- 配置添加商品servlet -->
    <servlet>
        <servlet-name>addGoodsServlet</servlet-name>
        <servlet-class>cn.servlet.AddGoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addGoodsServlet</servlet-name>
        <url-pattern>/addGoodsServlet</url-pattern>
    </servlet-mapping>

    <!-- 配置注册servlet -->
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>cn.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
</web-app>